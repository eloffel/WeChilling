<% include ../partials/header.ejs %>

  <% if (locals.user) { %>

    <section class="container">
      <section class="box">
          <div class="row uniform 50%">
            <div class="4u">
              <span class="image fit">
                <img src="/images/<%=event.type%>.png"/>
              </span>
            </div>
          </div>
          <!-- Event detail -->
          <header>
            <h3><%=event.name%></h3>
            <%=event.place%> on <%=event.date%> from <%=event.timeStart%> to <%=event.timeEnd%>
          </header>
          <%=event.description%>
          <p>
            Organized: <a href="/<%=event.owner_username%>/profile"><% if (event.username == user.username) { %> You <% } else { %> <%=event.owner%> <% } %></a></br>
            <%=event.member_name.length%> Joined. <%for (i = 0; i < event.member_name.length; i++){%><a href="/<%=event.member_username[i]%>/profile"><%=event.member_name[i]%></a><%if (i !=  event.member_name.length - 1) { %>, <% } } %></p>
          <div class="row">
            <div class="2u">
              <% if (user.username == event.owner_username) { %>
                <a href="/event/delete/<%=event.id%>" class="button special fit icon fa-trash">Delete</a>
              <% } else if (event.member_username.indexOf(user.username) > -1 ) { %>
                <a href="/event/withdraw/<%=event.id%>" class="button fit icon fa-sign-out">Withdraw</a>
              <% } else { %>
                <a href="/event/join/<%=event.id%>" class="button special fit icon fa-star">Join</a>
              <% } %>
            </div>
            <div class="2u">
              <% if ( user.username == event.owner_username ) { %>
                <a href="/event/edit/<%=event.id%>" class="button fit icon fa-edit">Edit</a>
              <% } %>
            </div>
          </div>
      </section>
    </section>
  <% } %>

<% include ../partials/footer.ejs %>
